generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                Int      @id @default(autoincrement())
  pet               Pet[] 
  username          String   @unique
  password          String
  refreshTokenId    RefreshToken?
  
}

model RefreshToken {
  id                Int      @id @default(autoincrement())
  user              User     @relation(fields: [userId], references: [id])
  userId            Int      @unique
  token             String   @unique
}

model Pet {
  id            Int       @id @default(autoincrement())
  master        User      @relation(fields: [userId], references: [id])
  userId        Int
  dateOfBirth   DateTime  
  name          String
  sex           String
  type          String
  event         Event[]
}

model Event {
  id            Int       @id @default(autoincrement())
  pet           Pet       @relation(fields: [petId], references: [id])
  petId         Int
  date          DateTime
  start_time    String
  end_time      String
  type          Event_Type
  descripation  String
  detail        String?

}

enum Event_Type {
  A
  B
}